@import colors
@import prefixes
@import 'components/triangle'
@import geocoder

.ig
  @import basics
  @import ShareDialog
.ig
  #header
    position absolute
    top 0px
    left 0px
    width 100%
    height 40px
    color white
    div
      float left
      width 50%
      height 100%
      line-height 40px
      padding-left 10px
      font-weight bold
      &:first-child
        background ColorHeadingLink
      &:last-child
        background ColorHeading

  .map
    position absolute
    top 40px
    left 0px
    bottom 0px
    width 50%
    &#map-1
      left 50%
    .slaveMarker
      width 16px
      height 16px
      border-radius 50%
      border 3px solid black
      background white
      opacity 0.5
