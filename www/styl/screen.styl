@import colors
@import prefixes
@import 'components/triangle'
@import geocoder

.ig
  @import basics
.ig
  #header
    position absolute
    top 0px
    left 0px
    width 100%
    height 40px
    color white
    div
      float left
      width 50%
      height 100%
      line-height 40px
      padding-left 10px
      font-weight bold
      &:first-child
        background ColorHeadingLink
      &:last-child
        background ColorHeading

  .map
    position absolute
    top 40px
    left 0px
    bottom 0px
    width 50%
    &#map-1
      left 50%
    .slaveMarker
      width 16px
      height 16px
      border-radius 50%
      border 3px solid black
      background white
      opacity 0.5
  #shareBtn
    display block
    position absolute
    top 50px
    right 10px
    background white
    padding 5px 10px
    border 2px solid #aaa
    border-radius 4px
    cursor pointer
    &:hover
      text-decoration none
  #shareArea
    display none
    &.visible
      display block
    position absolute
    top 150px
    left 50%
    width 260px
    padding 5px 10px 5px 10px
    margin-left (@width / -2)
    background white
    border 2px solid #aaa
    input
      margin-top 8px
      width 100%
    a
      display block
      float left
      margin-right 10px
      margin-top 10px
    .close
      position absolute
      right 0px
      top -5px




