#shareBtn
  display block
  position absolute
  top 50px
  right 10px
  background white
  padding 5px 10px
  border 2px solid #aaa
  border-radius 4px
  cursor pointer
  &:hover
    text-decoration none
#shareArea
  display none
  &.visible
    display block
  position absolute
  top 150px
  left 50%
  width 260px
  padding 5px 10px 5px 10px
  margin-left (@width / -2)
  background white
  border 2px solid #aaa
  input
    margin-top 8px
    width 100%
  a
    display block
    float left
    margin-right 10px
    margin-top 10px
  .close
    position absolute
    right 0px
    top -5px
